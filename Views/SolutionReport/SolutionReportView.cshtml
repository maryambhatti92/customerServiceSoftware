@model css.Shared.ViewModels.ServiceFormVM

<!DOCTYPE html>

<html>
<head>
</head>
<body>

    @*@{
        string name = "";
        int companyID = 0;
        if (Session["Sequware"] == null)
        {
            Response.Redirect("~/Login/Login");
        }      
    }*@
    <div>
        <p><img src="~/assets/img/image001.png" alt="" width="1000" height="154" dock="top">&nbsp;</p>
        <p>&nbsp;</p>
        <br clear="ALL">
        <p><strong style="font-size: 24px; font-family: serif;">Service Request Information: </strong>RMA Number: @Model.customerRequest.Request_id  Service Request Date: @Model.customerRequest.date_added</p>
    </div>
    <p>&nbsp;</p>
    <div>
        <div><hr noshade="noshade" size="3" width="100%"></div>
        <h2 style="color: blue;">Mast. file address:</h2>
        <table width="479" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td width="211">
                        <p>Company:  </p>
                    </td>
                    <td width="211"><p>@Model.Customer.company </p></td>
                </tr>

                <tr>
                    <td width="211">
                        <p>Street:  </p>
                    </td>
                    <td width="211"><p>@Model.Customer.street </p></td>
                </tr>

                <tr>
                    <td width="211">
                        <p>Zip Code and city:  </p>
                    </td>
                    <td width="211"><p>@Model.Customer.Zipcode </p></td>
                </tr>


                <tr>
                    <td width="211">
                        <p>Country:  </p>
                    </td>
                    <td width="211"><p>@Model.Customer.Country </p></td>
                </tr>

            </tbody>
        </table>

        <div><hr noshade="noshade" size="3" width="100%"></div>
        <h2 style="color: blue;">Service Request Information:</h2>
        <table width="479" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>RMA Nr.:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.customerRequest.Request_id</p>
                    </td>
                </tr>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>Date of Entry:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.customerRequest.date_added</p>
                    </td>
                </tr>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>Product:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.orderData.product</p>
                    </td>
                </tr>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>Delivery Date:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.orderData.DeliveryDate</p>
                    </td>
                </tr>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>Your reference:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.customerRequest.ref_num</p>
                    </td>
                </tr>
                <tr>
                    <td width="211" style="border-bottom:1pt solid black;">
                        <p>Service Request:</p>
                    </td>
                    <td width="268" style="border-bottom:1pt solid black;">
                        <p>@Model.customerRequest.issue</p>
                    </td>
                </tr>
            </tbody>
        </table>
        <div><hr size="2" width="100%"></div>
        <h2 style="color: blue;">Given contacts:</h2>
        @{
            var @x = @Model.Contacts.FirstOrDefault();
            <p>Name: @x.name </p>
            <p>E-Mail: @x.email </p>
            <p>Phone: @x.phone </p>

        }
        <div><hr size="2" width="100%"></div>
        <h2 style="color: blue;">Your description:</h2>
        <p>@Model.ProblemDescriptionIssue</p>
        <p>Reason: @Model.customerRequest.error_description</p>
        <p>Original Quantity: @Model.orderData.Orignal_Quantity </p>
        <p>Delivery Date: @Model.orderData.DeliveryDate </p>
        <h2 style="color: blue;">Inspection:</h2>
        <p>Diagnosis: @Model.Diagnosis & @Model.ServiceTask </p>
        <p>Description: @Model.inspectionData.Description </p>
        <div><hr size="2" width="100%"></div>
        <p>&nbsp;</p>
    </div>

    <div>
        <h2 style="color: blue;">Options for action:</h2>
        <table width="479" cellspacing="0" cellpadding="0">
            <tbody>
                @{
                    foreach (var @option in Model.solutionData.options)
                    {
                        <tr><td width="312" style="border-bottom:1pt solid black; "><p>  @option.Options:</p></td> <td width="168" style="border-bottom:1pt solid black; "><p>  @option.price EUR</p></td></tr>
                    }

                }
            </tbody>
        </table>
        <p>If you decide for a scrapping of the delivered parts, we ask for your release. Of course, this service is free for you.</p>

        <p>Note: Our general delivery and sales conditions apply. All mentioned prices excl. VAT.</p>

    </div>
</body>
</html>


<style type="text/css">
    p {
        font-family: serif;
        font-size: 20px;
    }
</style>