@model css.Data.Models.Tbl_EmailContents

<div id="form-EmailModal" tabindex="-1" role="dialog" class="modal fade modal-dark modal-dark-success">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <h3 class="modal-title">E-Mail senden</h3>
            </div>
            <div class="modal-body form">
                <div class="col-sm-12" style="background-color:#302f2f; padding-left:0px; padding-right:0px;">
                    <div class="main-content" style="background-color:white; color:black">
                        <div class="email-subject col-md-11">
                            <input type="text" style="max-width: 100% !important;" placeholder="Betreff eingeben" value="@Model.Subject">
                        </div>
                        <div class="email-recipient">
                            <div class="to">
                                <div class="form-group row">
                                    <label class="col-sm-1 control-label">Zu:</label>
                                    <div class="email-subject col-sm-11">
                                        <input type="text" style="max-width: 100% !important;" value="@Model.To">
                                        @*<select multiple="" class="tags">
                            <option value="1" selected=""> @Model.To</option>
                        </select>*@
                                    </div>
                                </div>
                            </div>
                            @*<div class="to cc">
                <div class="form-group row">
                    <label class="col-sm-1 control-label">Cc:</label>
                    <div class="col-sm-11">

                    </div>
                </div>
            </div>*@
                        </div>
                  
                            <div class="email editor">
                                <div id="email-editor" style="display: none;">
                                    <p> @Model.RMA </p>
                                    <p> @Model.Reference </p>
                                    <p> @Model.Date </p>

                                    <p>@Model.Dear</p>
                                    <p>@Model.Email_text</p>
                                    <p>@Model.Footer</p>
                                    <p>@Model.Signature</p>
                                </div>
                                <div class="note-statusbar"><div class="note-resizebar"><div class="note-icon-bar"></div><div class="note-icon-bar"></div><div class="note-icon-bar"></div></div></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-space" onclick="window.open('https://outlook.live.com/mail/0/inbox')"><i class="icon s7-mail"></i> Outlook</button>
                                <button type="button" data-dismiss="modal" class="btn btn-success md-close">Stornieren</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
            </div>
        </div>


    </div>
</div>


<script src="~/assets/lib/summernote/summernote.min.js" type="text/javascript"></script>
<script src="~/assets/lib/summernote/summernote-ext-amaretti.js" type="text/javascript"></script>
<script src="~/assets/lib/select2/js/select2.min.js" type="text/javascript"></script>
<script src="~/assets/js/app-email-compose.js" type="text/javascript"></script>

<script type="text/javascript">$(document).ready(function(){
      	//initialize the javascript
      	App.init();
      	App.emailCompose();
    });

    $("#form-EmailModal").on("hidden.bs.modal", function () {
        $("#SentPopupPlaceHolder").html("");
    });

    $('body').on('hidden.bs.modal', function () {
        if ($('.modal.in').length > 0) {
            $('body').addClass('modal-open');
            $('.modal').css('overflow-y', 'auto');
        }
    });


    </script>